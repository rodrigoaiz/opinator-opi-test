<style is:global>
  @import "../styles/reset.css";
  @import "../styles/mixins.scss";

  :root {
    --red: rgb(230 57 70);
    --white: rgb(241 250 238);
    --darkest-blue: #0a1e3c;
    --blue: #2cbdaa;
    --lightblue: #8cd2e6;
    --lightest-blue: #d6e6f2;
    --orage: #f58122;
    --yellow: #fac916;
    --grey: #dcdce6;
    --headings-xxl: clamp(4rem, 3.5vw, 3rem);
    --headings-xl: clamp(1.55rem, 1.9vw, 2rem);
    --headings-lg: clamp(1.2rem, 1.6vw, 1.7rem);
    --font-base: "Raleway Variable", sans-serif;
    --transition-smooth: ease-in-out 0.5s all;
    --padding-container: 2rem;
    --scale: scale(1.05);
  }
  body {
    font-family: var(--font-base);
  }
  h1 {
    text-wrap: pretty;
  }
  section {
    h2 {
      font-size: var(--headings-lg);
      color: var(--white);
      line-height: 2rem;
      text-wrap: pretty;
      hyphens: none;
      font-weight: 700;
      text-align: center;
    }
  }
  @keyframes fade-in {
    from {
      opacity: 0;
      transform: translateY(100px) scale(0.8);
    }

    to {
      opacity: 1;
      transform: translateY(0) scale(1);
    }
  }

  @keyframes scale {
    to {
      transform: scale(var(--max-scale, 1));
    }
  }
  @keyframes slideIn {
    from {
      transform: translateY(100%);
    }
    to {
      transform: translateY(0);
    }
  }
  @keyframes slideOut {
    from {
      transform: translateY(0);
    }
    to {
      transform: translateY(100%);
    }
  }
  @keyframes scale {
    from {
      transform: scale(1);
    }
    to {
      transform: scale(1.2);
    }
  }
</style>
